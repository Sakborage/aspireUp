<!DOCTYPE html>
<html lang="en">
<head>
  <title>Resume - <%= data.name || "Your Name" %></title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
  <link id="theme-style" rel="stylesheet" href="/css/template3.css">
</head>

<body>
  <div class="main-wrapper">
    <div class="container px-3 px-lg-5">
      <article class="resume-wrapper mx-auto theme-bg-light p-5 mb-5 my-5 shadow-lg">
        <div class="resume-header">
          <div class="row align-items-center">
            <div class="resume-title col-12 col-md-6 col-lg-8 col-xl-9">
              <h2 class="resume-name mb-0 text-uppercase"><%= data.name %></h2>
              <div class="resume-tagline mb-3 mb-md-0"><%= data.tagline || "" %></div>
            </div>
            <div class="resume-contact col-12 col-md-6 col-lg-4 col-xl-3">
              <ul class="list-unstyled mb-0">
                <% if (data.phone) { %>
                <li class="mb-2"><i class="fas fa-phone fa-fw fa-lg me-2"></i><%= data.phone %></li>
                <% } %>
                <% if (data.email) { %>
                <li class="mb-2"><i class="fas fa-envelope fa-fw fa-lg me-2"></i><%= data.email %></li>
                <% } %>
                <% if (data.linkedin) { %>
                <li class="mb-2"><i class="fas fa-globe fa-fw fa-lg me-2"></i><%= data.linkedin %></li>
                <% } %>
                <% if (data.location) { %>
                <li class="mb-0"><i class="fas fa-map-marker-alt fa-fw fa-lg me-2"></i><%= data.location %></li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>

        <hr>

        <% if (data.objective) { %>
        <div class="resume-intro py-3">
          <div class="row align-items-center">
            <div class="col text-start">
              <p class="mb-0"><%= data.objective %></p>
            </div>
          </div>
        </div>
        <% } %>

        <hr>

        <div class="resume-body">
          <div class="row">
            <!-- MAIN COLUMN -->
            <div class="resume-main col-12 col-lg-8 col-xl-9 pe-0 pe-lg-5">
              <!-- Experience -->
              <% if (data.experience && data.experience.length) { %>
              <section class="work-section py-3">
                <h3 class="text-uppercase resume-section-heading mb-4">Work Experience</h3>
                <% data.experience.forEach(exp => { %>
                <div class="item mb-3">
                  <div class="item-heading row align-items-center mb-2">
                    <h4 class="item-title col-12 col-md-6 col-lg-8 mb-2 mb-md-0"><%= exp.title %></h4>
                    <div class="item-meta col-12 col-md-6 col-lg-4 text-muted text-start text-md-end">
                      <%= exp.employer %> | <%= exp.startDate %> - <%= exp.endDate %>
                    </div>
                  </div>
                  <div class="item-content">
                    <p><%= exp.description %></p>
                  </div>
                </div>
                <% }) %>
              </section>
              <% } %>

              <!-- Projects -->
              <% if (data.projects && data.projects.length) { %>
              <section class="project-section py-3">
                <h3 class="text-uppercase resume-section-heading mb-4">Projects</h3>
                <% data.projects.forEach(proj => { %>
                <div class="item mb-3">
                  <div class="item-heading row align-items-center mb-2">
                    <h4 class="item-title col-12 col-md-6 col-lg-8 mb-2 mb-md-0"><%= proj.title %></h4>
                    <div class="item-meta col-12 col-md-6 col-lg-4 text-muted text-start text-md-end"><%= proj.techStack %></div>
                  </div>
                  <div class="item-content">
                    <p><%= proj.description %></p>
                  </div>
                </div>
                <% }) %>
              </section>
              <% } %>
            </div>

            <!-- SIDE COLUMN -->
            <aside class="resume-aside col-12 col-lg-4 col-xl-3 px-lg-4 pb-lg-4">
              <!-- Skills -->
              <% if (data.skills) { const skillsList = data.skills.split(',').map(s => s.trim()); %>
              <section class="skills-section py-3">
                <h3 class="text-uppercase resume-section-heading mb-4">Skills</h3>
                <ul class="list-unstyled resume-skills-list">
                  <% skillsList.forEach(skill => { %>
                  <li class="mb-2"><%= skill %></li>
                  <% }) %>
                </ul>
              </section>
              <% } %>

              <!-- Education -->
              <% if (data.education && data.education.length) { %>
              <section class="education-section py-3">
                <h3 class="text-uppercase resume-section-heading mb-4">Education</h3>
                <ul class="list-unstyled resume-education-list">
                  <% data.education.forEach(edu => { %>
                  <li class="mb-3">
                    <div class="resume-degree font-weight-bold"><%= edu.level %></div>
                    <div class="resume-degree-org text-muted"><%= edu.school %></div>
                    <div class="resume-degree-time text-muted"><%= edu.graduationDate %></div>
                  </li>
                  <% }) %>
                </ul>
              </section>
              <% } %>

              <!-- Awards -->
              <% if (data.achievements) { const achievementsList = data.achievements.split(',').map(a => a.trim()); %>
              <section class="education-section py-3">
                <h3 class="text-uppercase resume-section-heading mb-4">Awards</h3>
                <ul class="list-unstyled resume-awards-list">
                  <% achievementsList.forEach(award => { %>
                  <li class="mb-3">
                    <div class="font-weight-bold"><%= award %></div>
                  </li>
                  <% }) %>
                </ul>
              </section>
              <% } %>

              <!-- Languages -->
              <% if (data.languages) { const langs = data.languages.split(',').map(l => l.trim()); %>
              <section class="skills-section py-3">
                <h3 class="text-uppercase resume-section-heading mb-4">Languages</h3>
                <ul class="list-unstyled resume-lang-list">
                  <% langs.forEach(lang => { %>
                  <li class="mb-2"><%= lang %></li>
                  <% }) %>
                </ul>
              </section>
              <% } %>

              <!-- Interests -->
              <% if (data.hobbies) { const hobbiesList = data.hobbies.split(',').map(h => h.trim()); %>
              <section class="skills-section py-3">
                <h3 class="text-uppercase resume-section-heading mb-4">Interests</h3>
                <ul class="list-unstyled resume-interests-list mb-0">
                  <% hobbiesList.forEach(hobby => { %>
                  <li class="mb-2"><%= hobby %></li>
                  <% }) %>
                </ul>
              </section>
              <% } %>
            </aside>
          </div>
        </div>

        <hr>

        <div class="resume-footer text-center">
          <ul class="resume-social-list list-inline mx-auto mb-0 d-inline-block text-muted">
            <% if (data.github) { %>
            <li class="list-inline-item mb-lg-0 me-3">
              <a class="resume-link" href="<%= data.github %>">
                <i class="fab fa-github-square fa-2x me-2"></i>
                <span class="d-none d-lg-inline-block text-muted"><%= data.github %></span>
              </a>
            </li>
            <% } %>
            <% if (data.linkedin) { %>
            <li class="list-inline-item mb-lg-0 me-3">
              <a class="resume-link" href="<%= data.linkedin %>">
                <i class="fab fa-linkedin fa-2x me-2"></i>
                <span class="d-none d-lg-inline-block text-muted"><%= data.linkedin %></span>
              </a>
            </li>
            <% } %>
          </ul>
        </div>
      </article>
    </div>
  </div>
</body>
</html>
